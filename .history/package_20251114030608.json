{
  "name": "prescripto-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm-run-all install:frontend install:admin install:backend",

    "install:frontend": "cd frontend && npm install",
    "install:admin": "cd admin && npm install",
    "install:backend": "cd backend && npm install",

    "build": "npm-run-all build:frontend build:admin",

    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd admin && npm run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
